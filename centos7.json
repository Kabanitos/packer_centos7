{
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "/FTP/FTP/ISO/Linux/CentOS/CentOS-7-x86_64-DVD-2003.iso" ,
            "iso_checksum": "md5:16673979023254ea09cc0b57853a7bbd",
            "vm_name": "centos7",
            "guest_os_type": "RedHat_64",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_pty": true,
            "ssh_wait_timeout": "10m",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"]
              ],
            "disk_size": "20480",
            "http_directory": "http",
            "boot_command": [
                "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
            ],
            "shutdown_command": "/sbin/halt -p"
        }
    ],
    "post-processors": [
        {
        "type": "vagrant",
        "compression_level": "9",
        "output": "centos7.box"
        }
    ],
    "provisioners": [
        {
          "type": "shell",
          "execute_command": "{{.Vars}} sudo -S -E bash '{{.Path}}'",
          "start_retry_timeout": "1m",
          "expect_disconnect": true,
          "pause_before": "20s",
          "scripts" :
                [
                  "scripts/scripts.sh"
                ]
            }
    ]

}
